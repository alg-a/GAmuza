/* GAmuza 0.4.1 examples  --------------------- Basics/mouse.ga  This example shows a basic use of mouseReleased & mouseMoved interaction. created by mj*/x = OUTPUT_W/2y = OUTPUT_H/2fluctua = 20dispersa = 5function draw()	gaBackground(0.0,0.1)		ofSetColor(255)		text = "Click to change the circle position and move to modify it"	ofDrawBitmapString(text,20,200)		for i = 0, fluctua do		_angle = ofRandom(TWO_PI)		dispX = x + math.cos(_angle)*dispersa		dispY = y + math.sin(_angle)*dispersa		ofCircle(dispX, dispY, 2)	endend function mouseReleased()	x = gaMouseX()	y = gaMouseY()endfunction mouseMoved()	dispersa = gaMouseX()*0.23566	fluctua = gaMouseY()*0.23566end