cam = of.texture()

function setup()
    cam:allocate(CAPTURE_W,CAPTURE_H,GL_RGB)
    cam:clear()
end

function update()
    cam = ga.cameraTexture(0)
end

function draw()
    ga.background(0.0,1.0)
    
    of.setColor(255)
    cam:draw(0,0)
end
