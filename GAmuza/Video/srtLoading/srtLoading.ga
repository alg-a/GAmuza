*/

video = of.videoPlayer()
sub = ofx.subtitles()

function setup()
	// load movie file
	video:loadMovie(ga.importFile("video.mov")) // your video here
	video:play()
	// load subtitles .srt file
	sub:load(ga.importFile("dark.srt")) // your sub here
	sub:loadfont(ga.importFile("Anonymous_Pro_B.ttf"),22)
	sub:setScreen(OUTPUT_W,OUTPUT_H)
end

function update()
	if video:isPlaying() then
    		video:update()
	end
end

function draw()
    ga.background(0.0,1.0)
    
    // draw the video centered and fullscreen
    of.setColor(255)
    scaleH = (OUTPUT_W/video.width)*video.height
    video:draw(0,OUTPUT_H/2 - scaleH/2,OUTPUT_W,scaleH)
    
    // draw the subtitles
    sub:setColor(255,255,255)    
    sub:draw(video:getDuration()*video:getPosition())
end

function mouseDragged()
    video:setPosition(ga.mouseX()/OUTPUT_W)
end
